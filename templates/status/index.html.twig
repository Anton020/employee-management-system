{% extends 'base.html.twig' %}

{% block title %}Statusy zada≈Ñ{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <tr>
                    <th scope="col">Kategoria</th>
                    <th scope="col">Nazwa statusu</th>
                </tr>
                {% for status in status %}
                    <tr>
                        <td>{{ status.category }}</td>
                        <td>{{ status.name }}</td>

                    </tr>
                {% endfor %}
            </table>
            {% if is_granted('ROLE_EMPLOYER') %}
                <a href="{{ path('status_add') }}" class="btn btn-primary">Dodaj status</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
