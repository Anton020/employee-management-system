{% extends 'base.html.twig' %}

{% block title %}Pracownicy{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col">
            <table class="table table-striped table-dark">
                <tr>
                    <th scope="col">ImiÄ™</th>
                    <th scope="col">Nazwisko</th>
                    <th scope="col">PESEL</th>
                    <th scope="col">Adres</th>
                    <th scope="col">Data urodzenia</th>
                    <th scope="col"></th>
                </tr>
                {% for employee in employees %}
                    <tr>
                        <td>{{ employee.firstName }}</td>
                        <td>{{ employee.surname }}</td>
                        <td>{{ employee.pesel }}</td>
                        <td>{{ employee.address }}</td>
                        <td>{{ employee.dateOfBirth|date('d.m.Y') }}</td>
                        <td><a href="/employees/edit/{{ employee.id }}" class="btn btn-primary" id="{{ employee.id }}">Edytuj</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            <a href="{{ path('employees_add') }}" class="btn btn-primary">Dodaj pracownika</a>
        </div>
    </div>
{% endblock %}
