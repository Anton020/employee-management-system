{% extends 'base.html.twig' %}

{% block title %}Wydarzenia{% endblock %}

{% block body %}
    <table class="table table-striped table-dark">
        <tr>
            <th scope="col">Data rozpoczęcia wydarzenia</th>
            <th scope="col">Data zakończenia wydarzenia</th>
            <th scope="col">Opis</th>
        </tr>
        {% for events in events %}
            <tr>
                <!-- dodać osobne kolumny na daty -->
                <th>{{ events.StartDate|date('d-m-Y') }}</th>
                <th>{{ events.EndDate|date('d-m-Y') }}</th>
                <th>{{ events.description }}</th>
            </tr>
        {% endfor %}

    </table>
    <a href="{{ path('eventsadd') }}" class="btn btn-dark" role="button" aria-pressed="true">Dodaj wydarzenie</a>
    <a href="{{ path('index') }}" class="btn btn-dark" role="button" aria-pressed="true">Wróć na stronę główną</a>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}
