{% extends 'base.html.twig' %}

{% block title %}Zadania{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col">
            <table class="table table-striped table-dark">
                <tr>
                    <th scope="col">Pracownik</th>
                    <th scope="col">Data wystawienia</th>
                    <th scope="col">Termin realizacji</th>
                    <th scope="col">Opis</th>
                    {% if is_granted('ROLE_EMPLOYER') %}
                        <th></th>
                    {% endif %}
                </tr>
                {% for tasks in tasks %}
                    <tr>
                        <td>{{ tasks.employee }}</td>
                        <td>{{ tasks.creationDate|date('d.m.Y H:i') }}</td>
                        <td>{{ tasks.deadline |date('d.m.Y H:i') }}</td>
                        <td>{{ tasks.description }}</td>
                        {% if is_granted('ROLE_EMPLOYER') %}
                            <td><a href="/tasks/edit/{{ tasks.id }}" class="btn btn-primary"
                                   id="{{ tasks.id }}">Edytuj</a></td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </table>
            {% if is_granted('ROLE_EMPLOYER') %}
                <a href="{{ path('tasks_add') }}" class="btn btn-primary">Dodaj zadanie</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
