{% extends 'base.html.twig' %}

{% block title %}Zadania{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <table class="table table-striped table-dark">
                <tr>
                    <th scope="col">EmployeeID</th>
                    <th scope="col">Data wystawienia</th>
                    <th scope="col">Termin realizacji</th>
                    <th scope="col">Opis</th>
                </tr>
                {% for tasks in tasks %}
                    <tr>
                        <td>{{ tasks.employeeId }}</td>
                        <td>{{ tasks.creationDate|date('d.m.Y') }}</td>
                        <td>{{ tasks.deadline |date('d.m.Y')}}</td>
                        <td>{{ tasks.description }}</td>
                    </tr>
                {% endfor %}
            </table>
            <a href="{{ path('/tasks/add') }}" class="btn btn-dark">Dodaj zadanie</a>
        </div>
    </div>
{% endblock %}
